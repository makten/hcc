# =====================================================
# Home Control Center - Environment Configuration
# =====================================================
# Copy this file to .env and update with your values

# Home Assistant Configuration
VITE_HASS_URL=http://homeassistant.local:8123

# Enable mock mode (set to 'false' for production with real HA)
VITE_MOCK_MODE=true

# =====================================================
# Backend/Docker Configuration (for production)
# =====================================================

# Server port
PORT=3000

# Node environment
NODE_ENV=production

# Database location (Docker volume)
DATA_DIR=/app/data
DATABASE_PATH=/app/data/hcc.db

# Force frontend to use backend API
# (automatically enabled when not running on dev port 5173)
VITE_USE_BACKEND=true

# Backend API URL (only needed if running frontend separately)
# VITE_API_URL=http://localhost:3001/api
